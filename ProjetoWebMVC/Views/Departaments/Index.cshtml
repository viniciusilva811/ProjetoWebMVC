@model IEnumerable<ProjetoWebMVC.Models.Departament>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <!--botao para criar novo departamento -->
    <a asp-action="Create" class="btn btn-default">Create new Departament</a>
    
</p>
<table class="table">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td><!--Funcoes de edição, detalhes e deleção dos departamentos -->
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
